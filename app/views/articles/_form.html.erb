<%= form_with model: @article, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "title" %><br />
    <%= f.text_field :title, id:"article_title" %>
  </div>

  <div class="field">
    <%= f.label :text, "text" %><br />
    <%= f.text_area :text, class: :form__text, id:"article_text" %>
  </div>

  <div class="field">
    <%= f.label :image, "image" %><br />
    <%= f.file_field :image, id:"article_image" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: :form__btn  %>
  </div>
<% end %>